<html>
<head>

  <title>StudySpace</title>
  <meta name="viewport" content="width=device-width, initial-scale=1"/>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.0/css/materialize.min.css">
  <%= stylesheet_link_tag "reg" %>

</head>
<body>
  <!-- jQuery is required by Materialize to function -->
  <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.1.1.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.0/js/materialize.min.js"></script>
  <script type="text/javascript">
    $(document).ready(function() {
      $('select').material_select();
    });
  </script>


<% provide(:title, 'Sign up') %>
<div class="col s12 heading">
  <h1>Study<span class="spaceColor">Space</span></h1>
</div>
<div class="register container z-depth-4">
  <div class="container">
    <div class="row">
      <h2>Register to start finding study partners</h2>
    </div>
    <%= form_for(@user, url: signup_path) do |f| %>
    <%= render '/shared/error_messages' %>
        <div class="row">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="row">
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
        <div class="row">
          <%= f.label :password %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <div class="row">
          <%= f.label :password_confirmation, "Confirm Password" %>
          <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>
        <div class="row">
          <%= f.label :major %>
          <%= f.text_field :major, class: 'form-control' %>
        </div>
        <div class="row">
          <%= f.label :gradyear, "Graduation Year" %>
          <%= f.number_field :gradyear, class: 'form-control' %>
        </div>
        <div class="row">
          <%= f.label :bio, "Short Bio" %>
          <%= f.text_area :bio, class: 'form-control', class: 'materialize-textarea' %>
          
        </div>
        <div class="row">
          <div class="file-field input-field">
            <div class="btn">
              <span>Upload</span>
              <%= f.file_field :avatar, class: 'form-control', accept: 'image/png,image/gif,image/jpeg' %>
            </div>
            <div class="file-path-wrapper">
              <input class="file-path validate" ,  placeholder="Upload Profile Picture Here">
            </div>
          </div>          
        </div>

        <!-- Courses goes here(i think u might want to move this to another form_for loop that deals with classes (just put the user into the course's array that user picked-->
        <div class="row">
          <%= f.label :courses, "Courses" %>
          <%= select_tag "courses[]", "<option>CS111</option><option>CS32</option><option>CS143</option><option>CSM117</option>".html_safe, multiple: true, prompt: "Select Your Classes"%>
        </div>        


        <div class="row">
          <%= f.label :facebook, "Facebook Url (Optional)" %>
          <%= f.text_field :facebook, class: 'form-control' %>
        </div>
        <div class="row regBtn">
          <div class="col-md-12">
          <%= f.submit "Create my account", class: "btn-large btn-primary" %>
          </div>
        </div>
        <% end %>
        <div class="row">
          <p id="hasAccount">Already have an account? <%= link_to "Log in here!", home_path  %></p>
        </div>
  </div>
</div>
</body>
</html>
