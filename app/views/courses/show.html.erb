<!DOCTYPE html>
<html>
	<head>
		<title> <% provide(:title, @course.name) %>
		</title>
	</head>
	<body>
		<h1>
			<%= @course.name %>
		</h1>
		<p>
			<h4> Users in this class: </h4>
            <% (0..@course.users.length - 1).each do |i| %>
              <%=link_to(@course.users[i].name, user_path(@course.users[i].id)) %>
              <br></br>
            <% end %>
		</p>
		<%= link_to("Join this class", edit_course_path(@course.id)) %>
</body>
</html>